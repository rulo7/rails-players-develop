<% @title="Players" %>
<p id="notice"><%= notice %></p>

<h1><%= @title %></h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Position</th>
    <th>Birthday</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Description</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Zip</th>
    <th>Nationality</th>
    <th>Gender</th>
    <th>Team</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.surname %></td>
        <td><%= player.position %></td>
        <td><%= player.birthday %></td>
        <td><%= player.height %></td>
        <td><%= player.weight %></td>
        <td><%= player.description %></td>
        <td><%= player.phone %></td>
        <td><%= player.email %></td>
        <td><%= player.zip %></td>
        <td><%= player.nationality %></td>
        <td><%= player.gender %></td>
        <td><%= player.team_name %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>

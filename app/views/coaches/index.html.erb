<p id="notice"><%= notice %></p>

<h1>Coaches</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Level</th>
    <th>Birthday</th>
    <th>Description</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Zip</th>
    <th>Nationality</th>
    <th>Gender</th>
    <th>Avatar</th>
    <th>Team</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @coaches.each do |coach| %>
      <tr>
        <td><%= coach.name %></td>
        <td><%= coach.surname %></td>
        <td><%= coach.level %></td>
        <td><%= coach.birthday %></td>
        <td><%= coach.description %></td>
        <td><%= coach.phone %></td>
        <td><%= coach.email %></td>
        <td><%= coach.zip %></td>
        <td><%= coach.nationality %></td>
        <td><%= coach.gender %></td>
        <td><%= coach.avatar %></td>
        <td><%= coach.team_name %></td>
        <td><%= link_to 'Show', coach %></td>
        <td><%= link_to 'Edit', edit_coach_path(coach) %></td>
        <td><%= link_to 'Destroy', coach, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

